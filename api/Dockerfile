# ===============================
# ðŸ§± Ã‰tape 1 : Build du projet
# ===============================
FROM maven:3.9.9-eclipse-temurin-21 AS builder

WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copier le code source
COPY src ./src

# Construire le jar en ignorant les tests
RUN mvn clean package -DskipTests

# ===============================
# ðŸš€ Ã‰tape 2 : ExÃ©cution du projet
# ===============================
FROM eclipse-temurin:21-jdk

WORKDIR /app

# Copier le jar construit depuis l'Ã©tape prÃ©cÃ©dente
COPY --from=builder /app/target/*.jar app.jar

# DÃ©finir le profil prod
ENV SPRING_PROFILES_ACTIVE=prod

# Exposer le port dÃ©fini par Render (variable d'environnement PORT)
EXPOSE 8080

# DÃ©marrer l'application
ENTRYPOINT ["java", "-jar", "app.jar"]
